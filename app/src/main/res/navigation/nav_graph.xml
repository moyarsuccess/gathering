<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">
    <fragment
        android:id="@+id/introFragment"
        android:name="com.gathering.android.intro.IntroFragment"
        android:label="IntroFragment"
        tools:layout="@layout/frg_intro">
        <action
            android:id="@+id/action_introFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_introFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.gathering.android.signUp.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/frg_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_eventFragment"
            app:destination="@id/eventFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.gathering.android.signin.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/frg_sign_in" />
    <fragment
        android:id="@+id/eventFragment"
        android:name="com.gathering.android.event.EventFragment"
        android:label="EventFragment"
        tools:layout="@layout/frg_event">
        <argument
            android:name="uId"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="displayName"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="phoneNumber"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="photoUrl"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="isEmailVerified"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
</navigation>