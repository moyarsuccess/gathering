<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_homeFragment">
    <dialog
        android:id="@+id/introFragment"
        android:name="com.gathering.android.intro.IntroFragment"
        android:label="IntroFragment"
        tools:layout="@layout/frg_intro">
        <action
            android:id="@+id/action_introFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_introFragment_to_signInFragment"
            app:destination="@id/signInScreen" />
    </dialog>
    <dialog
        android:id="@+id/signUpFragment"
        android:name="com.gathering.android.auth.signup.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/frg_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_verificationFragment"
            app:destination="@id/verificationScreen" />
        <argument
            android:name="Email"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/signInScreen"
        android:name="com.gathering.android.auth.signin.SignInScreen"
        android:label="SignInScreen"
        tools:layout="@layout/screen_sign_in">
        <action
            android:id="@+id/action_signInScreen_to_navigation_homeFragment"
            app:destination="@id/navigation_homeFragment" />
        <action
            android:id="@+id/action_signInScreen_to_verificationScreen"
            app:destination="@id/verificationScreen"
            app:popUpTo="@+id/main_nav_graph" />
        <action
            android:id="@+id/action_signInScreen_to_forgetPasswordScreen"
            app:destination="@id/forgetPasswordScreen" />
    </dialog>
    <fragment
        android:id="@+id/navigation_homeFragment"
        android:name="com.gathering.android.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/frg_home">
        <action
            android:id="@+id/action_homeFragment_to_introFragment"
            app:destination="@id/introFragment" />
        <action
            android:id="@+id/action_navigation_home_to_EventDetailScreen"
            app:destination="@id/EventDetailScreen" />
        <argument
            android:name="Event"
            app:argType="com.gathering.android.event.Event" />
    </fragment>
    <fragment
        android:id="@+id/navigation_eventFragment"
        android:name="com.gathering.android.event.myevent.MyEventFragment"
        android:label="MyEventFragment"
        tools:layout="@layout/frg_my_event">
        <action
            android:id="@+id/action_navigation_eventFragment_to_putEventBottomSheetFragment"
            app:destination="@id/putEventBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.gathering.android.profile.ProfileScreen"
        android:label="ProfileScreen"
        tools:layout="@layout/screen_profile">
        <action
            android:id="@+id/action_navigation_profile_to_updateUserInfoBottomSheetFragment"
            app:destination="@id/personalDataBottomSheetFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_favoriteEvent"
            app:destination="@id/favoriteEvent" />
        <action
            android:id="@+id/action_navigation_profile_to_introFragment"
            app:destination="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/EventDetailScreen"
        android:name="com.gathering.android.event.eventdetail.EventDetailScreen"
        android:label="EventDetailScreen"
        tools:layout="@layout/screen_event_detail">
        <action
            android:id="@+id/action_EventDetailScreen_to_attendeesDetailBottomSheet"
            app:destination="@id/attendeesDetailBottomSheet" />
    </fragment>
    <dialog
        android:id="@+id/putEventBottomSheetFragment"
        android:name="com.gathering.android.event.putevent.PutEventScreen"
        android:label="AddEventBottomSheetFragment"
        tools:layout="@layout/screen_put_event">
        <action
            android:id="@+id/action_putEventBottomSheetFragment_to_addLocationBottomSheet"
            app:destination="@id/addLocationBottomSheet" />
        <action
            android:id="@+id/action_putEventBottomSheetFragment_to_addPicBottomSheet"
            app:destination="@id/addPicBottomSheet" />
        <action
            android:id="@+id/action_putEventBottomSheetFragment_to_navigation_event"
            app:destination="@id/navigation_eventFragment" />
        <action
            android:id="@+id/action_putEventBottomSheetFragment_to_inviteFriendBottomSheet"
            app:destination="@id/inviteFriendBottomSheet" />
    </dialog>
    <dialog
        android:id="@+id/addLocationBottomSheet"
        android:name="com.gathering.android.event.putevent.location.AddLocationBottomSheet"
        android:label="AddLocationBottomSheet"
        tools:layout="@layout/bottom_sheet_add_location" />
    <dialog
        android:id="@+id/addPicBottomSheet"
        android:name="com.gathering.android.event.putevent.pic.AddPicBottomSheet"
        android:label="AddPicBottomSheet"
        tools:layout="@layout/bottom_sheet_add_pic">
        <action
            android:id="@+id/action_back_to_add_event"
            app:destination="@id/putEventBottomSheetFragment" />
    </dialog>
    <dialog
        android:id="@+id/inviteFriendBottomSheet"
        android:name="com.gathering.android.event.putevent.invitation.AddAttendeeBottomSheet"
        android:label="InviteFriendBottomSheet"
        tools:layout="@layout/bottom_sheet_add_attendees">
        <argument
            android:name="AttendeesEmail"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/verificationScreen"
        android:name="com.gathering.android.auth.verification.VerificationScreen"
        android:label="showEmailVerification"
        tools:layout="@layout/screen_verification">
        <action
            android:id="@+id/action_verification_to_navigation_home"
            app:destination="@id/navigation_homeFragment" />
        <deepLink
            android:id="@+id/verificationScreen"
            android:autoVerify="true"
            app:action="android.intent.action.VIEW"
            app:uri="gathering://gathering.com/email/verified" />
    </dialog>
    <dialog
        android:id="@+id/forgetPasswordScreen"
        android:name="com.gathering.android.auth.password.ForgetPasswordScreen"
        android:label="forgetPasswordScreen"
        tools:layout="@layout/screen_forget_password_email_input">
        <action
            android:id="@+id/action_forgetPasswordScreen_to_resetPassInfoBottomSheet"
            app:destination="@id/forgetPassInfoBottomSheet" />
    </dialog>
    <dialog
        android:id="@+id/forgetPassInfoBottomSheet"
        android:name="com.gathering.android.auth.password.ResetPassInfoBottomSheet"
        android:label="forgetPassInfoBottomSheet"
        tools:layout="@layout/bottom_sheet_forget_pass_info" />
    <dialog
        android:id="@+id/personalDataBottomSheetFragment"
        android:name="com.gathering.android.profile.updateinfo.UpdateUserInfoFragment"
        android:label="PersonalDataBottomSheetFragment"
        tools:layout="@layout/bottom_sheet_update_user_info">
        <action
            android:id="@+id/action_personalDataBottomSheetFragment_to_addPicBottomSheet"
            app:destination="@id/addPicBottomSheet" />
        <argument
            android:name="User"
            app:argType="com.gathering.android.auth.model.User" />
    </dialog>
    <dialog
        android:id="@+id/favoriteEvent"
        android:name="com.gathering.android.profile.favoriteEvent.FavoriteEvent"
        android:label="FavoriteEvent"
        tools:layout="@layout/bottom_sheet_favorite_event" />

    <dialog
        android:id="@+id/newPasswordInputScreen"
        android:name="com.gathering.android.auth.password.newPassword.InputNewPasswordScreen"
        android:label="newPasswordInputScreen"
        tools:layout="@layout/screen_new_password_input">
        <deepLink
            android:id="@+id/sendLinkForPassword"
            android:autoVerify="true"
            app:action="android.intent.action.VIEW"
            app:uri="gathering://gathering.com/password/reset" />
        <action
            android:id="@+id/action_newPasswordInputScreen_to_navigation_homeFragment"
            app:destination="@id/navigation_homeFragment" />

    </dialog>
    <dialog
        android:id="@+id/attendeesDetailBottomSheet"
        android:name="com.gathering.android.event.eventdetail.AttendeesDetailScreen"
        android:label="attendeesDetailBottomSheet"
        tools:layout="@layout/bottom_sheet_attendees_detail" />
</navigation>