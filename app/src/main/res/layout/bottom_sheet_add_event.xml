<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_sheet_dialog_backgroun_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/img_event"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginBottom="@dimen/img_margin"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/et_event_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/et_margin_start"
            android:layout_marginTop="@dimen/et_margin_top"
            android:layout_marginEnd="@dimen/tv_margin_end"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/event_name"
            android:padding="@dimen/et_padding"
            android:textSize="@dimen/et_text_size_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_event" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/et_margin_start"
            android:layout_marginTop="@dimen/et_margin_top"
            android:layout_marginEnd="@dimen/tv_margin_end"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/event_description"
            android:padding="@dimen/et_padding"
            android:textSize="@dimen/et_text_size_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_event_Name" />

        <LinearLayout
            android:id="@+id/layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_description">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tv_margin_start"
                android:layout_marginTop="@dimen/tv_margin_top"
                android:layout_weight="60"
                android:background="@drawable/custom_edit_text"
                android:padding="@dimen/et_padding"
                android:text="@string/date"
                android:textSize="@dimen/et_text_size_medium"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_location_margin_start"
                android:layout_marginTop="@dimen/btn_location_margin_top"
                android:layout_marginEnd="@dimen/btn_location_margin_start"
                android:layout_weight="40"
                android:background="@drawable/custom_button"
                android:ems="10"
                android:text="@string/date"
                android:textSize="@dimen/btn_text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_event"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_date">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/et_margin_start"
                android:layout_marginTop="@dimen/et_margin_top"
                android:layout_weight="60"
                android:background="@drawable/custom_edit_text"
                android:padding="@dimen/et_padding"
                android:text="@string/time"
                android:textSize="@dimen/et_text_size_medium" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_location_margin_start"
                android:layout_marginTop="@dimen/btn_location_margin_top"
                android:layout_marginEnd="@dimen/btn_location_margin_start"
                android:layout_weight="40"
                android:background="@drawable/custom_button"
                android:ems="10"
                android:text="@string/time"
                android:textSize="@dimen/btn_text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_event"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/layout_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_time">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/et_margin_start"
                android:layout_marginTop="@dimen/et_margin_top"
                android:layout_weight="60"
                android:background="@drawable/custom_edit_text"
                android:padding="@dimen/et_padding"
                android:text="@string/location"
                android:textSize="@dimen/et_text_size_medium" />

            <Button
                android:id="@+id/btn_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_location_margin_start"
                android:layout_marginTop="@dimen/btn_location_margin_top"
                android:layout_marginEnd="@dimen/btn_location_margin_start"
                android:layout_weight="40"
                android:background="@drawable/custom_button"
                android:ems="10"
                android:text="@string/location"
                android:textSize="@dimen/btn_text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_event"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_invitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_location">

            <TextView
                android:id="@+id/tv_attendees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/et_margin_start"
                android:layout_marginTop="@dimen/et_margin_top"
                android:layout_weight="60"
                android:background="@drawable/custom_edit_text"
                android:padding="@dimen/et_padding"
                android:text="@string/attendees"
                android:textSize="@dimen/et_text_size_medium" />

            <Button
                android:id="@+id/btn_invitation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/btn_location_margin_start"
                android:layout_marginTop="@dimen/btn_location_margin_top"
                android:layout_marginEnd="@dimen/btn_location_margin_start"
                android:layout_weight="40"
                android:background="@drawable/custom_button"
                android:ems="10"
                android:text="@string/invite"
                android:textSize="@dimen/btn_text_size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_event"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin_top"
            android:layout_marginBottom="@dimen/btn_margin_bottom"
            android:background="@drawable/custom_button"
            android:padding="@dimen/btn_padding"
            android:text="@string/add_event"
            android:textSize="@dimen/btn_text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_invitation"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

